---
import "../styles/global.css";
import "@fontsource-variable/inter";

import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Servicii from "../components/Servicii.astro";
import Despre from "../components/Despre.astro";

const {
  title = "Dr. Cirimpei Tatiana - Radioterapie",
  description = "Radioterapie modernă, informații pentru pacienți și trimitere către programare.",
} = Astro.props;
---

<!doctype html>
<html lang="ro" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon-chrome-192x192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/android-chrome-512-512.png" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#ffffff" />

    <script>
      (() => {
        try {
          const key = "rt-theme";
          const stored = localStorage.getItem(key); // "dark" | "light" | null
          const systemDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
          const isDark = stored ? stored === "dark" : systemDark;
          document.documentElement.classList.toggle("dark", isDark);
        } catch {}
      })();
    </script>

  </head>

  <body class="min-h-screen antialiased">
    <Header />
    <Hero />
    <Servicii />
    <Despre />
  </body>
  
</html>
